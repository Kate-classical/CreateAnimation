<UserControl x:Class="WpfApp2.UserSprites.UserControl2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp2"
             MouseDown="OnMouseDown" MouseUp="OnMouseUp"
             mc:Ignorable="d" Name="usercontrol2" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding Text}" Grid.Row="0" Width="{Binding Width}" Background="{Binding Color}" />
        <TextBlock Grid.Row="1" Name="Yvel"  Width="20" Background="Orange" Margin="0,0,80,0"></TextBlock>
        <TextBlock Grid.Row="2" Width="100" Background="Orange"></TextBlock>
    </Grid>
</UserControl>
